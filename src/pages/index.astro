---
import Layout from "@/layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout>
  <div class="bg-base min-h-screen pt-20 px-4 md:px-0">
    <div class="container mx-auto">
      <h1 class="text-4xl md:text-6xl font-light mb-8">{t("site.title")}</h1>
      <p class="text-xl text-gray-600 mb-12">{t("site.description")}</p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <section>
          <h2 class="text-2xl font-light mb-4 border-b border-gray-100 pb-2">
            {t("home.story.label")}
          </h2>
          <p class="text-gray-500 leading-relaxed font-light">
            {t("home.story.content")}
          </p>
        </section>
        <section>
          <h2 class="text-2xl font-light mb-4 border-b border-gray-100 pb-2">
            {t("home.expansion.label")}
          </h2>
          <p class="text-gray-500 leading-relaxed font-light">
            {t("home.expansion.content")}
          </p>
        </section>
        <section>
          <h2 class="text-2xl font-light mb-4 border-b border-gray-100 pb-2">
            {t("home.vision.label")}
          </h2>
          <p class="text-gray-500 leading-relaxed font-light">
            {t("home.vision.content")}
          </p>
        </section>
      </div>
    </div>
  </div>
</Layout>
