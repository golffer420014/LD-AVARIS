---
import Layout from "@/layouts/Layout.astro";
import TabsOriginal from "@/components/TabsOriginal.vue";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const demoTabs = [
  {
    label: t("manpower.tabs.services"),
    content:
      "Our manpower services provide the expertise and resources you need to build a high-performing team. We handle everything from recruitment to ongoing management.",
  },
  {
    label: t("manpower.tabs.workforces"),
    content:
      "We manage diverse workforces across multiple industries, ensuring that every employee is equipped with the skills and support they need to excel.",
  },
  {
    label: t("manpower.tabs.clients"),
    content:
      "Our clients range from small startups to multinational corporations. We pride ourselves on delivering tailored manpower solutions that meet their unique needs.",
  },
  {
    label: t("manpower.tabs.contact"),
    content:
      "Get in touch with us to discuss your manpower requirements. We're here to help you find the right talent for your business.",
  },
];
---

<Layout>
  <div class="bg-base min-h-screen pt-8">
    <TabsOriginal tabs={demoTabs} client:load>
      <div slot="tab-0" class="max-w-3xl mx-auto pt-10 text-gray-800">
        <h2
          class="text-[26px] font-thin tracking-[0.2em] uppercase mb-12 text-center text-black"
        >
          {t("manpower.services.title")}
        </h2>

        <p
          class="text-[.99em] font-light mb-8 text-center"
          set:html={t("manpower.services.description")}
        />

        <div class="w-[32rem] mx-auto">
          <h3
            class="mb-4 text-center font-bold"
            set:html={t("manpower.services.subtitle")}
          />

          <div class="grid grid-cols-1">
            {
              [1, 2, 3, 4, 5, 6, 7, 8].map((i) => (
                <div class="flex items-start space-x-3">
                  <span class="text-black font-normal mt-2 w-[5px] h-[5px] rounded-full bg-black" />
                  <div class="">{t(`manpower.services.item${i}` as any)}</div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </TabsOriginal>
  </div>
</Layout>
