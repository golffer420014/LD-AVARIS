---
import Layout from "@/layouts/Layout.astro";
import TabsOriginal from "@/components/TabsOriginal.vue";
import ClientsTab from "@/components/ClientsTab.vue";
import ContactTab from "@/components/ContactTab.vue";
import ServicesTab from "@/components/ServicesTab.vue";
import { ui, defaultLang } from "@/i18n/ui";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Client Data
const clientData = t("manpower.clients" as any);
const workforceData = t("manpower.workforces" as any);
const contactData = t("manpower.contact" as any);

// Gallery Images
import img1 from "@/assets/img/1.jpg";
import img2 from "@/assets/img/2.jpg";
import img3 from "@/assets/img/3.jpg";
import img4 from "@/assets/img/4.jpg";
import img5 from "@/assets/img/5.jpg";
import img6 from "@/assets/img/6.jpg";
import img7 from "@/assets/img/7.jpg";
import img8 from "@/assets/img/8.jpg";
import img9 from "@/assets/img/9.jpg";
import Workforces from "@/components/Workforces.vue";

const galleryImages = [
  { src: img1.src, width: 1200, height: 800, alt: "Manpower Deployment 1" },
  { src: img2.src, width: 1200, height: 800, alt: "Manpower Deployment 1" },
  { src: img3.src, width: 1200, height: 800, alt: "Manpower Deployment 2" },
  { src: img4.src, width: 1200, height: 800, alt: "Manpower Training" },
  { src: img5.src, width: 1200, height: 800, alt: "Manpower Screening" },
  { src: img6.src, width: 1200, height: 800, alt: "Logistics Setup" },
  { src: img7.src, width: 1200, height: 800, alt: "On-site Management" },
  { src: img8.src, width: 1200, height: 800, alt: "Team Preparation" },
  { src: img9.src, width: 1200, height: 800, alt: "Global Recruitment" },
];

const demoTabs = [
  {
    label: t("manpower.tabs.services"),
    slug: "services",
    content:
      "Our manpower services provide the expertise and resources you need to build a high-performing team. We handle everything from recruitment to ongoing management.",
  },
  {
    label: t("manpower.tabs.workforces"),
    slug: "workforces",
    content:
      "We manage diverse workforces across multiple industries, ensuring that every employee is equipped with the skills and support they need to excel.",
  },
  {
    label: t("manpower.tabs.clients"),
    slug: "clients",
    content:
      "Our clients range from small startups to multinational corporations. We pride ourselves on delivering tailored manpower solutions that meet their unique needs.",
  },
  {
    label: t("manpower.tabs.contact"),
    slug: "contact",
    content:
      "Get in touch with us to discuss your manpower requirements. We're here to help you find the right talent for your business.",
  },
];
---

<Layout>
  <div class="bg-base min-h-screen md:pt-8">
    <TabsOriginal tabs={demoTabs} client:load>
      <div slot="tab-0">
        <ServicesTab lang={lang} images={galleryImages} client:load />
      </div>
      <div slot="tab-1">
        <Workforces lang={lang} data={workforceData} client:load />
      </div>
      <div slot="tab-2">
        <ClientsTab lang={lang} countries={clientData} client:load />
      </div>
      <div slot="tab-3">
        <ContactTab lang={lang} data={contactData} client:load />
      </div>
    </TabsOriginal>
  </div>
</Layout>

