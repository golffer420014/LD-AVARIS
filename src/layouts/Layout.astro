---
import "../styles/global.css";
import Navbar from "../components/Navbar.vue";
import Footer from "../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;
const domain = "https://avaris.co.th";
const canonicalURL = new URL(Astro.url.pathname, domain);

const thPath = lang === "en" ? currentPath.replace("/en", "") : currentPath;
const enPath = lang === "th" ? `/en${currentPath}` : currentPath;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "AVARIS - Avaris International Manpower Co., Ltd.",
  url: domain,
  logo: `${domain}/assets/logo.png`,
  contactPoint: {
    "@type": "ContactPoint",
    telephone: "+66-88-686-6880",
    contactType: "customer service",
    email: "contact@avaris.co.th",
    areaServed: "TH",
    availableLanguage: ["Thai", "English"],
  },
  sameAs: [
    "https://www.facebook.com/AvarisManpower",
    "https://www.instagram.com/avarismanpower",
    "https://www.youtube.com/@AvarisManpower",
    "https://www.tiktok.com/@avarismanpower",
    "https://x.com/AvarisManpower",
  ],
};
const isManpower = currentPath.includes("/manpower");
const displayTitle = isManpower ? "Avaris International Manpower" : "Avaris";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <title>{displayTitle}</title>
    <meta name="description" content={t("site.description")} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Alternate Languages -->
    <link rel="alternate" hreflang="th" href={new URL(thPath, domain)} />
    <link rel="alternate" hreflang="en" href={new URL(enPath, domain)} />
    <link rel="alternate" hreflang="x-default" href={new URL(thPath, domain)} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={displayTitle} />
    <meta property="og:description" content={t("site.description")} />
    <meta
      property="og:image"
      content={new URL("/assets/og-image.jpg", domain)}
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={displayTitle} />
    <meta property="twitter:description" content={t("site.description")} />
    <meta
      property="twitter:image"
      content={new URL("/assets/og-image.jpg", domain)}
    />

    <!-- Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />
  </head>
  <body class="h-screen overflow-hidden bg-base">
    <div class="h-full overflow-y-scroll overflow-x-hidden relative">
      <Navbar lang={lang} currentPath={currentPath} client:load />
      <div class="min-h-[calc(100vh)]"><slot /></div>
      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
